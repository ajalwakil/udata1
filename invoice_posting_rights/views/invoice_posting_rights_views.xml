<odoo>
    <data>
        <record id="view_move_form_reset_inherit" model="ir.ui.view">
            <field name="name">account.move.form.reset.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_draft']" position="replace">
                    <button name="button_draft" string="Reset to Draft" type="object"
                            groups="invoice_posting_rights.group_accounting_rights"
                            attrs="{'invisible' : [('show_reset_to_draft_button', '=', False)]}" data-hotkey="q"/>
                </xpath>
                <xpath expr="//header/button[2]" position="replace">
                    <button name="action_post" string="Confirm" class="oe_highlight"
                            type="object" groups="invoice_posting_rights.group_accounting_rights" data-hotkey="v"
                            attrs="{'invisible': ['|', '|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '=', 'entry'), ('display_inactive_currency_warning','=',True)]}"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>