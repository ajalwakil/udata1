<odoo>
    <data>
        <record id="account_payment_bank_charges_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.bank.charges</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_bank_id']" position="after">
                    <field name="bank_charges" string="Bank Charges"/>
                    <field name="vat_bank_charges" string="Vat Bank Charges(15%)"/>
                    <field name="total_vat_bank_charges" string="Total Bank Charges"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_journal_form_bank_charges_inherit" model="ir.ui.view">
            <field name="name">account.journal.form.inherit.bank.charges.inherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <field name="default_account_id" position="after">
                    <field name="bank_charge_account" string="Default bank Charge Account"/>
                </field>
            </field>
        </record>
    </data>
</odoo>