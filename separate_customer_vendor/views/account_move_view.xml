<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_view_move_form_custom_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('id', 'in', custom_partner_ids)]</attribute>
                </xpath>
                <field name="invoice_date" position="after">
                    <field name="is_customer" invisible="1"/>
                    <field name="is_vendor" invisible="1"/>
                    <field name="custom_partner_ids" widget='many2many_tags' invisible="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>