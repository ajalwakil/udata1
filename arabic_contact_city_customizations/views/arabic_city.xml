<odoo>
    <data>
        <record id="view_city_arabic_tree" model="ir.ui.view">
            <field name="name">res.city.arabic.tree</field>
            <field name="model">res.city.arabic</field>
            <field name="arch" type="xml">
                <tree string="State" editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_city_arabic_form" model="ir.ui.view">
            <field name="name">res.city.arabic.form</field>
            <field name="model">res.city.arabic</field>
            <field name="arch" type="xml">
                <form string="City">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>